<body>
  <h1>Will You Be My Valentine?</h1>
  <button id="noButton" onclick="handleNo()">No</button>
  <button id="yesButton" onclick="handleYes()">Yes</button>

  <script>
    function handleNo() {
      var message = document.getElementById("message");
      message.innerText = "You should reconsider...";
      message.style.fontSize = "14px";
      // Add more alternative phrases here if you'd like
    }

    function handleYes() {
      var message = document.getElementById("message");
      message.innerText = "YAY!";
      message.style.fontSize = "24px";
    }
  </script>
  <p id="message"></p>
</body>
